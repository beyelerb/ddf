                                    <include>org.geotools.ogc:net.opengis.wfs</include>
                                    <include>org.geotools.ogc:org.w3.xlink</include>
                                    <include>org.geotools.ogc:net.opengis.fes</include>
                                    <include>org.eclipse.emf:common</include>
                                    <include>org.eclipse.emf:ecore</include>
                                    <include>javax.media:jai_core</include>
                                    <include>org.geotools:gt-epsg-hsql</include>
                                    <include>org.geotools:gt-referencing</include>
                                    <include>java3d:vecmath</include>
                                    <include>commons-pool:commons-pool</include>
                                    <include>org.geotools:gt-metadata</include>
                                    <include>org.geotools:gt-opengis</include>
                                    <include>net.java.dev.jsr-275:jsr-275:jar</include>
                                    <include>jgridshift:jgridshift</include>
                                    <include>hsqldb:hsqldb</include>
                                    <include>com.vividsolutions:jts</include>
                                </includes>
                            </artifactSet>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>XPP3_1.1.4c_MIN_VERSION</exclude>
                                        <exclude>Skunkworks.class</exclude>
                                        <exclude>JDOMAbout*</exclude>
                                        <exclude>hsqlServlet.class</exclude>
                                        <exclude>findbugs-exclude.xml</exclude>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
