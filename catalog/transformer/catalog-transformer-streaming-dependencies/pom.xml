                <version>3.1.0</version>

                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>org.geotools:gt-xml</include>
                                    <include>org.geotools:gt-api</include>
                                    <include>org.geotools:gt-main</include>
                                    <include>jdom:jdom</include>
