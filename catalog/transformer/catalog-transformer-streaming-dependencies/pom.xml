                                    <include>it.geosolutions.imageio-ext:imageio-ext-utilities</include>
                                    <include>javax.media:jai_codec</include>
                                    <include>org.jaitools:jt-zonalstats</include>
                                    <include>org.jaitools:jt-utils</include>
                                    <include>org.geotools.xsd:gt-xsd-core</include>
                                    <include>org.geotools:gt-graph</include>
