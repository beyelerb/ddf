<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
		   xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

<!-- Get reference to Filter Adapter implementation -->
	<reference id="filterAdapter" interface="ddf.catalog.filter.FilterAdapter" />

	<!-- Get reference to Filter Builder implementation -->
	<reference id="filterBuilder" interface="ddf.catalog.filter.FilterBuilder" />

	<reference id="validator" interface="ddf.catalog.validation.MetacardValidator" />

	<bean id="xpathPreQueryPlugin" class="org.codice.ddf.xpath.XPathReplacementPreQueryPlugin">
		<cm:managed-properties persistent-id="org.codice.ddf.xpath.XPathReplacementPreQueryPlugin"
							   update-strategy="container-managed"/>

		<argument ref="filterAdapter" />
		<argument ref="filterBuilder" />
	</bean>

	<service ref="xpathPreQueryPlugin" interface="ddf.catalog.plugin.PreQueryPlugin"/>

</blueprint>